# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Use a MongoDB Atlas URI (mongodb+srv://...) or local MongoDB (mongodb://...)
# IMPORTANT: URL-encode special characters in username/password.
# Example: if password is Devraj@999, use Devraj%40999
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<dbName>?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=change-me-to-a-long-random-secret
JWT_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=10

# Optional: Frontend URL for CORS
# CLIENT_URL=http://localhost:5173

# Base Fare Configuration
BASE_FARE_MINI=55
BASE_FARE_SEDAN=90
BASE_FARE_BIKE=35
BASE_FARE_SUV=130
FARE_PER_KM=11
FARE_PER_MINUTE=2
